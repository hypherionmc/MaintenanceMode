{
    "schemaVersion": 1,
    "id": "mmode",
    "version": "${version}",

    "name": "Maintenance Mode",
    "description": "Put your server in maintenance mode, while giving only specific people access. Useful for doing work on servers without having people join!",
    "authors": [
      "HypherionSA"
    ],
    "contact": {
      "homepage": "https://mmode.fdd-docs.com/",
      "sources": "https://github.com/hypherionmc/MaintenanceMode/"
    },

    "license": "MIT",
    "icon": "assets/mmode/mmode_icon.png",

    "environment": "server",
    "entrypoints": {
      "server": [
        "me.hypherionmc.mmode.MaintenanceMode"
      ]
    },
    "mixins": [
      "mmode.mixins.json",
      "mmode.fabric.mixins.json"
    ],

    "depends": {
      "fabricloader": ">=0.14",
      "fabric": "*",
      "minecraft": ">=1.21",
      "java": ">=17"
    }
  }
